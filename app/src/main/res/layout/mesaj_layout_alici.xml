<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_mesaj_layout_mesaj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/mesaj_arka_plan"
        android:maxWidth="150dp"
        android:minWidth="80dp"
        android:padding="10dp"
        android:text="Merhabalar nasılsınız insşallah"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tv_mesaj_layout_tarih"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_mesaj_layout_mesaj"
        android:layout_alignEnd="@+id/tv_mesaj_layout_mesaj"
        android:layout_alignRight="@+id/tv_mesaj_layout_mesaj"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="-1dp"
        android:layout_marginRight="-1dp"
        android:text="22.22" />

</RelativeLayout>