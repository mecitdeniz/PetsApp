<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:background="@drawable/ilan_arka_plan">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="5dp"
            android:id="@+id/sikayet_layout_top"
            >
            <TextView
                android:id="@+id/tv_sikayet_layout_tarih"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/sikayet_layout_profil_resmi"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_supervisor_account">
            </de.hdodenhof.circleimageview.CircleImageView>
            <LinearLayout
                android:id="@+id/parent_sikayet_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_sikayet_aciklama"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" AAAAA"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:textColor="@android:color/black"/>
                <TextView
                    android:id="@+id/tv_sikayet_layout_kullanici_adi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="aaaaaaa"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/sikayet_layout_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="16dp"
            android:layout_below="@+id/ilan_layout2_top"
            android:paddingHorizontal="5dp">
            <ImageView
                android:id="@+id/sikayet_layout_resim"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/ic_launcher_foreground" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:padding="10dp">
                <TextView
                    android:id="@+id/tv_sikayet_layout_baslik"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxHeight="30dp"
                    android:textStyle="bold"
                    android:textSize="12dp"
                    android:text="İlan Başlığı" />
                <TextView
                    android:id="@+id/tv_sikayet_layout_aciklama"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxHeight="30dp"
                    android:textSize="12dp"
                    android:text="Buraya açıklama gelecek, tamam mı ? Anlaşıldı mı? Hadi ozaman ne duruyosun?" />

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:paddingRight="10dp"
            android:gravity="right"
            android:orientation="horizontal"
            android:layout_below="@+id/sikayet_layout_body">

            <LinearLayout
                android:id="@+id/parent_sikayet_layout_sikayetler"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp">
                <TextView
                    android:id="@+id/tv_sikayet_layout_sikayet_sayisi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center"
                    android:layout_marginRight="5dp"
                    android:text=""/>
                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center"
                    android:tint="@android:color/darker_gray"
                    android:src="@drawable/ic_baseline_people_alt" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/parent_sikayet_layout_ilan_kaldir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center"
                    android:layout_marginRight="5dp"
                    android:text="Yayından Kaldır"/>
                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center"
                    android:tint="@color/colorPrimaryDark"
                    android:src="@drawable/ic_baseline_block" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>