<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profil">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/profil_toolbar"
            layout="@layout/profil_toolbar">

        </include>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btn_hayvan_ekle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:src="@drawable/ic_add"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:tint="@color/white"
            android:backgroundTint="@color/colorPrimaryDark"
            app:fabSize="normal"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            android:paddingVertical="8dp"
            android:paddingHorizontal="5dp"
            android:layout_below="@+id/profil_toolbar">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/layout_profil_resmi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/profil_toolbar"
                    android:orientation="vertical"
                    android:background="@drawable/ilan_arka_plan"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/imageView_cikisYap"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="right"
                        android:tint="@color/colorPrimaryDark"
                        android:src="@drawable/ic_baseline_exit_to_app"/>
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profil_resmi"
                        android:layout_width="125dp"
                        android:layout_height="125dp"
                        android:layout_gravity="center_horizontal"
                        tools:src="@tools:sample/avatars"
                        app:civ_border_width="1dp"
                        app:civ_border_color="@color/colorPrimaryDark">
                    </de.hdodenhof.circleimageview.CircleImageView>

                    <TextView
                        android:id="@+id/tv_profil_ad_soyad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text=""
                        android:layout_marginTop="5dp"
                        android:textSize="16dp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/tv_profil_kullanici_adi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text=""
                        android:textSize="14dp"
                         />

                    <TextView
                        android:id="@+id/tv_profil_bio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="10dp"
                        android:text=""
                        android:textSize="16dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/ilan_arka_plan"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/layout_profil_resmi"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_profil_duzenle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="Profili Düzenle"
                        android:textSize="16dp"
                        android:layout_gravity="center"
                        android:textStyle="bold"></TextView>
                    <TextView
                        android:id="@+id/tv_results"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp">
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/parent_editor_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:background="@drawable/ilan_arka_plan"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/layout_profil_resmi"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="Editör Paneli"
                        android:textSize="16dp"
                        android:textStyle="bold"></TextView>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/parent_admin_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:background="@drawable/ilan_arka_plan"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/layout_profil_resmi"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="Admin Paneli"
                        android:textSize="16dp"
                        android:textStyle="bold"></TextView>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/parent_yorumlar_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ilan_arka_plan"
                    android:layout_marginTop="5dp"
                    android:visibility="gone"
                    android:gravity="center_vertical"
                    android:layout_below="@+id/layout_profil_resmi"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/textView_yorumlar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="Yorumlar"
                        android:textSize="16dp"
                        android:textStyle="bold"/>
                    <RatingBar
                        android:id="@+id/ratingBar_oy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:progressTint="@color/colorPrimaryDark"
                        style="?android:attr/ratingBarStyleSmall"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/parent_basvurular_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ilan_arka_plan"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/layout_profil_resmi"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="Başvurduğum İlanlar"
                        android:textSize="16dp"
                        android:textStyle="bold"></TextView>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_below="@+id/layout_profil_resmi"
                    android:background="@drawable/ilan_arka_plan"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="5dp"
                        android:text="Evcil Hayvanlarım"
                        android:textSize="16dp"
                        android:textStyle="bold"/>
                    <GridView
                        android:id="@+id/gridView_hayvanlar"
                        android:layout_width="match_parent"
                        android:numColumns="4"
                        android:scrollbars="none"
                        android:layout_height="fill_parent">
                    </GridView>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

    </RelativeLayout>
</FrameLayout>